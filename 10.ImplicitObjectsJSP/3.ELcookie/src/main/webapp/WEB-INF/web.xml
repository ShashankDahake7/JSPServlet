<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <display-name>CookieExampleApp</display-name>

  <!-- Configure session tracking via cookies -->
  <session-config>
    <session-timeout>30</session-timeout>  <!-- Session expires after 30 minutes -->
    <tracking-mode>COOKIE</tracking-mode> <!-- Use cookies for session tracking -->
  </session-config>

  <!-- Welcome page -->
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

</web-app>
